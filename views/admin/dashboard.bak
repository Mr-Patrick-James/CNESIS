              </tr>
              <tr>
                <td>2026-0002</td>
                <td>Maria Santos</td>
                <td>Bachelor of Public Administration</td>
                <td>2nd Year</td>
                <td><span class="badge-status active">Active</span></td>
                <td>
                  <button class="action-btn view"><i class="fas fa-eye"></i></button>
                  <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                  <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                </td>
              </tr>
              <tr>
                <td>2026-0003</td>
                <td>Pedro Garcia</td>
                <td>Welding & Fabrication Technology</td>
                <td>1st Year</td>
                <td><span class="badge-status active">Active</span></td>
                <td>
                  <button class="action-btn view"><i class="fas fa-eye"></i></button>
                  <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                  <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Program Heads Section -->
    <div class="section-content" id="faculty-section">
      <div class="page-header">
        <h2>Program Head Management</h2>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" onclick="switchSection('dashboard')">Dashboard</a></li>
            <li class="breadcrumb-item active">Program Heads</li>
          </ol>
        </nav>
      </div>
      
      <div class="content-card">
        <div class="content-card-header">
          <h5>All Program Heads</h5>
          <button class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Program Head
          </button>
        </div>
        
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Search program heads by name, department, or specialization...">
        </div>
        
        <div class="table-responsive">
          <table class="table custom-table">
            <thead>
              <tr>
                <th>Program Head ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Specialization</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>PH-2026-001</td>
                <td>Prof. Maria Rodriguez</td>
                <td>Information Technology</td>
                <td>Computer Science</td>
                <td><span class="badge-status active">Active</span></td>
                <td>
                  <button class="action-btn view"><i class="fas fa-eye"></i></button>
                  <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                  <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                </td>
              </tr>
              <tr>
                <td>PH-2026-002</td>
